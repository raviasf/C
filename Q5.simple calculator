//6. Write a program using switch case to print a simple calculator.

//Level01

#include <stdio.h>
int main()
{
  int num1,num2,result,choice;
  printf("Enter first number:\n");
  scanf("%d",&num1);
  printf("Enter second number:\n");
  scanf("%d",&num2);
  printf("Choose operation(Integer):\n1.Addition\n2.Subtraction\n3.Multiplication\n4.Division\n");
  scanf("%d",&choice);
  switch(choice)
  {
    case 1:
      result=num1+num2;
    break;
    case 2:
      result=num1-num2;
    break;
    case 3:
      result=num1*num2;
    break;
    case 4:
      result=num1/num2;
    break;
  }
  printf("Result=%d",result);
return 0;
}
